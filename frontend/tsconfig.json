{
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "outDir": "./public/",
    "module": "commonjs",
    "target": "es5",
    "jsx": "react",
    "lib": ["es6", "dom"],
    "noImplicitAny": false,
    "noImplicitReturns": true,
    "sourceMap": true,
    "baseUrl": ".",
    "experimentalDecorators": true,
    "paths" : {
      "@src/*" :        ["./src/*"],
      "@atoms/*" :      ["./src/atoms/*"],
      "@molecules/*" :  ["./src/molecules/*"],
      "@organisms/*" :  ["./src/organisms/*"],
      "@core/*" :       ["./src/core/*"],
      "@pages/*" :      ["./src/pages/*"],
      "@sass/*" :       ["./src/sass/*"]
    }
  },
  "exclude": [
    "node_modules"
  ]
}
