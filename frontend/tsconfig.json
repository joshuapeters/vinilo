{
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "outDir": "./dist/",
    "module": "commonjs",
    "target": "es5",
    "jsx": "react",
    "lib": ["es6", "dom"],
    "noImplicitAny": false,
    "noImplicitReturns": true,
    "sourceMap": true,
    "baseUrl": ".",
    "experimentalDecorators": true,
    "paths" : {
      "@src/*" :        ["./src/*"],
      "@components/*" : ["./src/components/*"],
      "@core/*" :       ["./src/core/*"],
      "@pages/*" :      ["./src/pages/*"],
      "@sass/*" :       ["./src/sass/*"]
    }
  },
  "exclude": [
    "node_modules"
  ]
}
